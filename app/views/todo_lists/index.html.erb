<p id="notice"><%= notice %></p>

<h1>Todo Lists</h1>

<table class="todo-table">
  <thead>
    <tr class="todo-table--head">
      <th>Title</th>
      <th>Description</th>
      <th>Tools</th>
    </tr>
  </thead>

  <tbody>
    <% @todo_lists.each do |todo_list| %>
      <tr id="<%= dom_id(todo_list) %>" class="todo-table--row">
        <td>
          <%= link_to todo_list.title, todo_list %>
        </td>
        <td><%= todo_list.description %></td>
        <td>
          <%= link_to 'List Items', todo_list_todo_items_path(todo_list) %>
          <%= link_to 'Edit', edit_todo_list_path(todo_list) %>
          <%= link_to 'Destroy', todo_list, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<button class="todo-button todo-button--action"><%= link_to 'New Todo List', new_todo_list_path %></button>
